{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "ASP.NET Core Hot Reload",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "dotnet",
        "args": [
          "watch",
          "--project",
          "HomeownersMS.csproj",
          "run"
        ],
        "cwd": "",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "HomeownersMS/Pages"
        }
      }
    ]
  }
  