@page
@model HomeownersMS.Pages_Security.SecurityModel
@{
    Layout = "_ResidentLayout"; // Use your layout file
    ViewData["HeaderTitle"] = "Security";
    ViewData["Title"] = "Security";
    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["Username"] = username;
    ViewData["CurrentPage"] = currentPage;
}
<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <!-- Security Features Section -->
        <h3 class="mb-4">Security Features</h3>

        <!-- Security Log -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Security Log</h5>
                <div class="table-responsive">
                    <table class="table table-striped security-log-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Activity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Hardcoded data -->
                            <tr>
                                <td>2023-11-15</td>
                                <td>10:30 AM</td>
                                <td>Visitor Entry</td>
                                <td><span class="badge bg-success">Approved</span></td>
                            </tr>
                            <tr>
                                <td>2023-11-14</td>
                                <td>08:45 PM</td>
                                <td>Gate Access</td>
                                <td><span class="badge bg-success">Approved</span></td>
                            </tr>
                            <tr>
                                <td>2023-11-13</td>
                                <td>03:15 PM</td>
                                <td>Visitor Entry</td>
                                <td><span class="badge bg-danger">Denied</span></td>
                            </tr>
                            <tr>
                                <td>2023-11-12</td>
                                <td>12:00 PM</td>
                                <td>Gate Access</td>
                                <td><span class="badge bg-success">Approved</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Side-by-Side Forms -->
        <div class="row">
            <!-- Visitor Pass Requests -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Visitor Pass Requests</h5>
                        <p class="card-text">Request a visitor pass for your guests. Fill out the form below to register a visitor.</p>
                        <form>
                            <div class="mb-3">
                                <label for="visitorName" class="form-label">Visitor Name</label>
                                <input type="text" class="form-control" id="visitorName" placeholder="Enter visitor name">
                            </div>
                            <div class="mb-3">
                                <label for="visitorContact" class="form-label">Contact Number</label>
                                <input type="text" class="form-control" id="visitorContact" placeholder="Enter contact number">
                            </div>
                            <div class="mb-3">
                                <label for="visitDate" class="form-label">Visit Date</label>
                                <input type="date" class="form-control" id="visitDate">
                            </div>
                            <div class="mb-3">
                                <label for="visitTime" class="form-label">Visit Time</label>
                                <input type="time" class="form-control" id="visitTime">
                            </div>
                            <button type="submit" class="btn btn-primary">Request Pass</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Vehicle Registration -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Vehicle Registration</h5>
                        <p class="card-text">Register your vehicle for secure access to the community.</p>
                        <form>
                            <div class="mb-3">
                                <label for="vehicleNumber" class="form-label">Vehicle Number</label>
                                <input type="text" class="form-control" id="vehicleNumber" placeholder="Enter vehicle number">
                            </div>
                            <div class="mb-3">
                                <label for="vehicleType" class="form-label">Vehicle Type</label>
                                <select class="form-select" id="vehicleType">
                                    <option value="car">Car</option>
                                    <option value="motorcycle">Motorcycle</option>
                                    <option value="truck">Truck</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="ownerName" class="form-label">Owner Name</label>
                                <input type="text" class="form-control" id="ownerName" placeholder="Enter owner name">
                            </div>
                            <button type="submit" class="btn btn-primary">Register Vehicle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Emergency Contact Directory -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Emergency Contact Directory</h5>
                <p class="card-text">Important contacts for emergencies.</p>
                <div class="table-responsive">
                    <table class="table table-striped contact-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Contact Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Hardcoded data -->
                            <tr>
                                <td>Security Office</td>
                                <td>24/7 Security</td>
                                <td>(123) 456-7890</td>
                            </tr>
                            <tr>
                                <td>Fire Department</td>
                                <td>Emergency Services</td>
                                <td>(987) 654-3210</td>
                            </tr>
                            <tr>
                                <td>Medical Emergency</td>
                                <td>Ambulance</td>
                                <td>(555) 123-4567</td>
                            </tr>
                            <tr>
                                <td>Community Manager</td>
                                <td>Administration</td>
                                <td>(111) 222-3333</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom CSS for improved card and table design */
    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #3c6693;
        margin-bottom: 20px;
    }

    .security-log-table,
    .contact-table {
        width: 100%;
        margin: 0 auto; /* Center the table */
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .security-log-table th,
    .security-log-table td,
    .contact-table th,
    .contact-table td {
        padding: 12px;
        text-align: left;
    }

    .security-log-table th,
    .contact-table th {
        background-color: #3c6693;
        color: white;
        font-weight: bold;
    }

    .security-log-table tbody tr:nth-child(odd),
    .contact-table tbody tr:nth-child(odd) {
        background-color: #f8f9fa;
    }

    .security-log-table tbody tr:hover,
    .contact-table tbody tr:hover {
        background-color: #e9ecef;
    }

    .badge {
        padding: 6px 10px;
        border-radius: 4px;
        font-size: 14px;
    }

    .badge.bg-success {
        background-color: #28a745;
    }

    .badge.bg-danger {
        background-color: #dc3545;
    }
</style>