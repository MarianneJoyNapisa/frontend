@page
@model HomeownersMS.Pages.Community.CommunityModel
@{
    Layout = "_ResidentLayout"; // Use your layout file
    ViewData["HeaderTitle"] = "Community";
    ViewData["Title"] = "Community";
    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["Username"] = username;
    ViewData["CurrentPage"] = currentPage;
}

<style>
    .community-container {
        max-width: 800px;
        margin: auto;
    }
    .post-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
        margin-bottom: 15px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
    .comment-box {
        margin-top: 10px;
        border-top: 1px solid #ddd;
        padding-top: 10px;
    }
    .comment {
        margin-bottom: 8px;
        padding: 8px;
        border-radius: 5px;
        background-color: #e9ecef;
    }
    .input-box {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    .post-btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
    }
    .post-btn:hover {
        background-color: #0056b3;
    }
</style>

<h2 class="mb-4 text-center">Community Forum</h2>

<div class="community-container">
    <!-- Post Form (Static, No Backend) -->
    <div class="post-card">
        <h4>Create a Post</h4>
        <textarea class="input-box" placeholder="Write something..."></textarea>
        <button class="post-btn mt-2">Post</button>
    </div>

    <!-- Example Posts (Static) -->
    <div class="post-card">
        <h4>John Doe</h4>
        <p>Does anyone know a good plumber in the neighborhood?</p>
        <div class="comment-box">
            <h6>Comments</h6>
            <div class="comment"><strong>Jane:</strong> Yes! Try calling Mark at 123-456-7890.</div>
            <input type="text" class="input-box" placeholder="Write a comment...">
            <button class="post-btn mt-1">Comment</button>
        </div>
    </div>

    <div class="post-card">
        <h4>Sarah Lee</h4>
        <p>Looking for a pet-friendly café nearby. Any recommendations?</p>
        <div class="comment-box">
            <h6>Comments</h6>
            <div class="comment"><strong>Mike:</strong> Try Cozy Paws Café on 5th Street!</div>
            <input type="text" class="input-box" placeholder="Write a comment...">
            <button class="post-btn mt-1">Comment</button>
        </div>
    </div>
</div>
