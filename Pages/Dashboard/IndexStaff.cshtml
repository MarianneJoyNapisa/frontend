@page
@using System.Security.Claims
@model HomeownersMS.Pages.Dashboard.IndexStaffModel
@{
    Layout = "_StaffLayout";
    ViewData["HeaderTitle"] = "Dashboard";
    ViewData["Title"] = "Dashboard";
}

<style>
    .stat-card {
        border-radius: 8px;
        transition: all 0.2s ease;
    }
    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .stat-icon {
        font-size: 1.5rem;
        opacity: 0.8;
    }
    .quick-link {
        border-radius: 8px;
        transition: all 0.2s ease;
    }
    .quick-link:hover {
        background-color: #f8f9fa;
        transform: scale(1.02);
    }
</style>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Staff Dashboard</h1>
        <small class="text-muted">@DateTime.Now.ToString("MMMM dd, yyyy")</small>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4 g-4">
        <div class="col-md-4">
            <div class="card stat-card bg-primary bg-opacity-10 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Active Requests</h6>
                            <h3 class="mb-0">8</h3>
                        </div>
                        <i class="fas fa-tasks stat-icon text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card stat-card bg-success bg-opacity-10 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Completed Today</h6>
                            <h3 class="mb-0">3</h3>
                        </div>
                        <i class="fas fa-check-circle stat-icon text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card stat-card bg-warning bg-opacity-10 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Pending Approval</h6>
                            <h3 class="mb-0">2</h3>
                        </div>
                        <i class="fas fa-clock stat-icon text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mb-4 g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Service Management</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Staff/Services" class="list-group-item list-group-item-action quick-link">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tools me-3 text-primary"></i>
                                <div>
                                    <h6 class="mb-1">View Service Requests</h6>
                                    <small class="text-muted">Manage active service requests</small>
                                </div>
                            </div>
                        </a>
                        <a href="/Staff/Services/Logs" class="list-group-item list-group-item-action quick-link">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clipboard-list me-3 text-success"></i>
                                <div>
                                    <h6 class="mb-1">Service Logs</h6>
                                    <small class="text-muted">View completed service history</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Community</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Community" class="list-group-item list-group-item-action quick-link">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-comments me-3 text-info"></i>
                                <div>
                                    <h6 class="mb-1">Community Posts</h6>
                                    <small class="text-muted">View and respond to community posts</small>
                                </div>
                            </div>
                        </a>
                        <a href="/Community/Create" class="list-group-item list-group-item-action quick-link">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-plus-circle me-3 text-warning"></i>
                                <div>
                                    <h6 class="mb-1">Create Announcement</h6>
                                    <small class="text-muted">Post community announcements</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Activity</h5>
            <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body">
            <div class="list-group list-group-flush">
                <div class="list-group-item">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                            <i class="fas fa-tools text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">New Service Request</h6>
                            <small class="text-muted">Plumbing issue in Unit 42B - 30 mins ago</small>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-2 rounded me-3">
                            <i class="fas fa-check-circle text-success"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Completed Service</h6>
                            <small class="text-muted">AC repair in Unit 15A - 2 hours ago</small>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 p-2 rounded me-3">
                            <i class="fas fa-comment text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">New Community Post</h6>
                            <small class="text-muted">John Doe posted about parking - Today</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>