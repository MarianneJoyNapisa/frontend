}

<!-- Add FullCalendar CSS in the head section -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

<style>
    /* General styles */
    .card {
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 20px;
        background-color: white;
    }
    
    .card-header {
        border-bottom: 1px solid #eee;
        padding: 12px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .card-body {
        padding: 15px;
    }
    
    .title-with-action {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    
    /* Calendar specific styles */
    #calendar {
        height: 320px;
        font-size: 12px;
    }
    
    #calendar .fc-header-toolbar {
        margin-bottom: 5px !important;
        padding: 0 5px;
    }
    
    #calendar .fc-toolbar-title {
        font-size: 1rem;
    }
    
    #calendar .fc-button {
        padding: 0.2rem 0.4rem;
        font-size: 0.8rem;
    }
    
    #calendar .fc-daygrid-day-number {
        font-size: 0.8rem;
        margin: 2px;
    }
    
    #calendar .fc-col-header-cell-cushion {
        font-size: 0.8rem;
    }
    
    #calendar .fc-daygrid-day.fc-day-today {
        background-color: rgba(255, 220, 40, 0.15);
    }
    
    #calendar .fc-daygrid-day-events {
        min-height: 0;
    }
    
    #calendar .fc-event {
        border-radius: 4px;
        padding: 2px;
        font-size: 0.7rem;
        margin: 1px 0;
        cursor: pointer;
    }
    
    /* Day names styling */
    .fc-col-header-cell {
        background-color: #f8f9fa;
    }
    
    /* Today highlight styling */
    .fc-day-today {
        background-color: #e8f4ff !important;
    }
    
    /* Event styling */
    .fc-event-main {
        padding: 2px 4px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    /* Current day highlighting */
    .fc-day-today .fc-daygrid-day-number {
        background-color: #3174ad;
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    /* Announcement cards */
    .ann-Card {
        border: 1px solid #ddd;
        border-radius: 6px;
        margin-bottom: 12px;
        overflow: hidden;
    }
    
    .ann-Card .header {
        padding: 8px 12px;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
    }
    
    .ann-Card .header .icon {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 8px;
        color: white;
    }
    
    .ann-Card .content {
        padding: 12px;
    }
    
    /* Security logs and billing styles */
    .secTags, .duePrices {
        font-weight: bold;
    }
    
    .secTags {
        color: white;
        background-color: #28a745;
        border-radius: 4px;
        padding: 2px 6px;
        display: inline-block;
    }
    
    .timeline-item {
        border-left: 2px solid #007bff;
        padding-left: 15px;
        margin-bottom: 15px;
        position: relative;
    }
    
    .timeline-date {
        font-weight: bold;
        color: #007bff;
    }
    
    .timeline-item:before {
        content: '';
        width: 12px;
        height: 12px;
        background-color: #007bff;
        border-radius: 50%;
        position: absolute;
        left: -7px;
        top: 5px;
    }
    
    .viewall_Btn {
        width: 100%;
        margin-top: 10px;
    }
    
    /* Custom button styling to match the image */
    .show-more-btn {
        background-color: transparent;
        border: 1px solid #ddd;
        color: #333;
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        text-align: center;
        transition: all 0.3s;
    }
    
    .show-more-btn:hover {
        background-color: #f1f1f1;
    }
</style>

