<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        
        // Demo events - use this if Model.CalendarEvents is null
        var demoEvents = [
            { title: 'HOA Meeting', start: '2021-09-19' },
            { title: 'Clean-up', start: '2021-09-18' },
            { title: 'Power Interruption', start: '2021-09-20' }
        ];
        
        // Use either model data or demo data
        var eventData = [];
        @if (Model.CalendarEvents != null && Model.CalendarEvents.Any()) {
            <text>
            eventData = @Json.Serialize(Model.CalendarEvents);
            </text>
        } else {
            <text>
            eventData = demoEvents;
            </text>
        }
        
        // Initialize FullCalendar
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            initialDate: '2021-09-19', // Set to match screenshot
            headerToolbar: {
                left: 'prev',
                center: 'title',
                right: 'next'
            },
            height: 'auto',
            dayMaxEventRows: 1,
            events: eventData,
            eventDisplay: 'block',
            eventColor: '#3788d8',
            firstDay: 1, // Start week on Monday
            // Use windowResize to ensure proper rendering at all times
            windowResize: function(view) {
                calendar.updateSize();
            }
        });
        
        calendar.render();
        
        // Handle checkbox for toggling announcements
        document.getElementById('includeAnnouncements').addEventListener('change', function() {
            // This would normally filter events
            // For demo purposes, just re-render
            calendar.refetchEvents();
        });
        
        // Make "Show More" buttons functional
        document.querySelectorAll('.show-more-btn').forEach(button => {
            button.addEventListener('click', function() {
                // For demo purposes, alert when clicked
                alert("This would show more items");
            });
        });
    });
</script>