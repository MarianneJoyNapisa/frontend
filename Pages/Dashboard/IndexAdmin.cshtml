@page
@using System.Security.Claims
@model HomeownersMS.Pages.Dashboard.IndexAdminModel
@{
    Layout = null;
    ViewData["Title"] = "Dashboard";

    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Globalstyle.css">
    <title>Dashboard</title>
</head>
<body class="dashboard">
    <!-- Header -->
    <div class="headerPage">
        <button id="sideNav_toggleBtn">
            <i class="bi bi-list fs-4 p-2"></i>
        </button>
        <h3 class="m-0">Dashboard</h3>
        <i class="bi bi-bell fs-4 p-2"></i>
    </div>

    <!-- Side Navigation -->
    <div class="sideNavBar" id="sidenavBar">
        <!-- User Profile Section -->
        <div class="userProfile">
            <i class="profileImage bi bi-person-circle"></i>
            <div class="userInfo">
                <p class="userName">@username</p>
                <p class="userType">Admin</p>
            </div>
        </div>

        <!-- Navigation Links -->
        <div class="mainfunc_navLinks">
            <a asp-page="/Dashboard/Index" class="navItem @(currentPage == "/Dashboard/Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>Dashboard</span>
            </a>
            <a asp-page="/Admin/Users/Index" class="navItem @(currentPage == "/Admin/Users/Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>User Management</span>
            </a>
            <a asp-page="/Admin/Facilities/Index" class="navItem @(currentPage == "/Admin/Users/Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>Facilities Management</span>
            </a>
        </div>

        <div class="genfunc_navLinks">
            <a asp-page="/Settings" class="navItem @(currentPage?.StartsWith("/Settings")==true ? "active" : "")">
                <i class="bi bi-gear-fill"></i>
                <span>Settings</span>
            </a>
            <a asp-page="/Account/Logout" class="navItem @(currentPage?.StartsWith("/Account/Logout")==true ? "active" : "")">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="container-fluid mainSection">
        <div class="row">
            @* admin dashboard page *@
    </div>

    <script src="~/js/SideNavjs.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script src="js/Calendar.js"></script>
</body>
</html>