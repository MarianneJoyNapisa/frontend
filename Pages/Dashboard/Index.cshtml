@page
@model HomeownersMS.Pages.Dashboard.IndexModel
@{
var username = HttpContext?.User?.Identity?.Name ?? "Guest";
var privilege = HttpContext?.User?.Claims?.FirstOrDefault(c => c.Type == "Privilege")?.Value ?? "Guest";
}

<h1>Dashboard</h1>
<p>Welcome, @username!</p>
<p>Your privilege level is: @privilege</p>
<a asp-page="/Account/Logout">Logout</a>
