@page
@model HomeownersMS.Pages.Notifications.IndexModel
@{
    Layout = "_ResidentLayout";
    ViewData["HeaderTitle"] = "Notifications";
    ViewData["Title"] = "Notifications";
}

<style>
    .notification-item {
        border-left: 4px solid transparent;
        padding: 15px;
        margin-bottom: 10px;
        background-color: #f8f9fa;
        border-radius: 4px;
    }
    .notification-item.unread {
        border-left-color: #0d6efd;
        background-color: #e7f1ff;
    }
    .notification-time {
        font-size: 0.8rem;
        color: #6c757d;
    }
    .notification-content {
        margin-top: 5px;
    }
    .mark-read-btn {
        font-size: 0.8rem;
        padding: 2px 8px;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Notifications</h1>
        <form method="post">
            <button type="submit" asp-page-handler="MarkAllAsRead" class="btn btn-primary">Mark All as Read</button>
        </form>
    </div>

    <div class="list-group">
        @foreach (var userNotification in Model.Notifications)
        {
            <div class="list-group-item notification-item @(!userNotification.IsRead ? "unread" : "")">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@userNotification.Notification.Title</h5>
                    <small class="notification-time">@userNotification.Notification.CreatedAt.ToString("g")</small>
                </div>
                <p class="mb-1 notification-content">@userNotification.Notification.Message</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small>@(userNotification.IsRead ? $"Read on {userNotification.ReadAt?.ToString("g")}" : "Unread")</small>
                    @if (!userNotification.IsRead)
                    {
                        <form method="post">
                            <input type="hidden" name="id" value="@userNotification.NotificationId" />
                            <button type="submit" asp-page-handler="MarkAsRead" class="btn btn-sm btn-outline-primary mark-read-btn">Mark as Read</button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>