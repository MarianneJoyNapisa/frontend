@page
@model HomeownersMS.Pages_Notification.NotificationsModel
@{
    Layout = "_ResidentLayout"; // Use the Resident layout
    ViewData["HeaderTitle"] = "Notifications";
    ViewData["Title"] = "Notifications";
    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["Username"] = username;
    ViewData["CurrentPage"] = currentPage;
}
<style>
    /* Header Design */
    .profile-header {
        position: relative;
        margin-bottom: 30px;
    }

    .profile-banner {
        width: 100%;
        height: 220px;
        object-fit: cover;
        object-position: center;
        border-radius: 12px;
        opacity: 0.9;
    }

    .search-bar-over-image {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        padding: 20px;
        border-radius: 12px;
    }

    .search-bar-over-image h4 {
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .search-filter-container .form-control {
        margin-bottom: 10px;
    }

    /* Notification Card Design */
    .notification-Card {
        border-bottom: 1px solid #ddd;
        padding: 16px;
    }
    .notification-Card .header {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }
    .notification-Card .icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        color: white;
    }

    .search-filter-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }
    .search-filter-container input,
    .search-filter-container button {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .search-filter-container button {
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
    }
    .search-filter-container button:hover {
        background-color: #0056b3;
    }
    .full-width-accordion {
        width: 100%;
    }
    .badge{
        margin-left: 10px;
    }
</style>

<!-- Main Content -->
<div class="container">

    <div class="profile-header">
        <!-- Profile Banner -->
        <img src="~/images/mail_box.jpg" alt="Notifications Banner" class="img-fluid profile-banner" />

        <!-- Search + Filter Bar Over Image -->
        <div class="search-bar-over-image">
            <div class="title d-flex align-items-center mb-3">
                <i class="bi bi-bell-fill me-2 fs-3 text-light"></i>
                <h3 class="fw-bold text-light">Stay Updated: Notifications</h3>
            </div>

            <form method="get" class="row g-2">
                <div class="col-12 col-md">
                    <div class="input-group">
                        <input type="text" class="form-control border-end-0" placeholder="Search..." aria-label="Search">
                        <button class="btn btn-input-icon" type="button"><i class="bi bi-search"></i></button>
                    </div>               
                </div>
                <div class="col-6 col-md-auto">
                    <input type="date" id="datePicker" name="SelectedDate" class="form-control datepicker">
                </div>
                <div class="col-6 col-md-auto d-grid">
                    <button type="submit" id="filterButton" class="btn btn-primary w-100">Filter</button>
                </div>
                <div class="col-12 col-md-auto d-grid">
                    <a href="@Url.Page("./Notifications")" class="btn btn-secondary w-100">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Accordion -->
    <div class="accordion" id="notificationAccordion">
        
        <!-- Today -->
        <div class="accordion-item border-0 mb-2">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseToday">
                    <i class="bi bi-calendar-day me-2"></i>
                    <span>Today</span>&nbsp;
                    <span class="badge">2</span>
                </button>
            </h2>
            <div id="collapseToday" class="accordion-collapse collapse" data-bs-parent="#notificationAccordion">
                <div class="accordion-body">
                    <!-- System Alert -->
                    <div class="notification-Card system-alert">
                        <div class="header">
                            <i class="bi bi-exclamation-triangle-fill icon" style="background-color: #dc3545;"></i>
                            <span>System Maintenance</span>
                        </div>
                        <div class="content">
                            <p><strong>Feb 18 at 10 PM - 11 PM</strong></p>
                            <p>The system will undergo maintenance. Please save your work and log out before this time.</p>
                        </div>
                    </div>

                    <!-- Reminder -->
                    <div class="notification-Card reminder">
                        <div class="header">
                            <i class="bi bi-bell-fill icon" style="background-color: #ffc107;"></i>
                            <span>Payment Due Reminder</span>
                        </div>
                        <div class="content">
                            <p><strong>Feb 18 at 6 PM</strong></p>
                            <p>Your monthly HOA payment is due today. Please make the payment to avoid late fees.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yesterday -->
        <div class="accordion-item border-0 mb-2">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseYesterday">
                    <i class="bi bi-calendar-minus me-2"></i> 
                    <span>Yesterday</span>&nbsp;
                    <span class="badge">1</span>
                </button>
            </h2>
            <div id="collapseYesterday" class="accordion-collapse collapse" data-bs-parent="#notificationAccordion">
                <div class="accordion-body p-0">
                    <!-- Update -->
                    <div class="notification-Card update">
                        <div class="header">
                            <i class="bi bi-info-circle-fill icon" style="background-color: #17a2b8;"></i>
                            <span>Policy Update</span>
                        </div>
                        <div class="content">
                            <p><strong>Feb 17 at 3 PM</strong></p>
                            <p>A new parking policy has been implemented. Please review the updated guidelines on the HOA portal.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- A Week Ago -->
        <div class="accordion-item border-0">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWeekAgo">
                    <i class="bi bi-calendar-week me-2"></i> 
                    <span>Last Week</span>&nbsp;
                    <span class="badge">1</span>
                </button>
            </h2>
            <div id="collapseWeekAgo" class="accordion-collapse collapse" aria-labelledby="headerWeekAgo" ata-bs-parent="#notificationAccordion">
                <div class="accordion-body p-0">
                    <!-- Event Reminder -->
                    <div class="notification-Card event-reminder">
                        <div class="header">
                            <i class="bi bi-calendar-event-fill icon" style="background-color: #28a745;"></i>
                            <span>Event Reminder</span>
                        </div>
                        <div class="content">
                            <p><strong>Feb 11 at 9 AM</strong></p>
                            <p>Don't forget the community clean-up drive happening this Saturday. Meet at the clubhouse!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Filter notifications by date
    document.getElementById('filterButton').addEventListener('click', function () {
        const selectedDate = document.getElementById('datePicker').value;
        if (!selectedDate) {
            alert('Please select a date.');
            return;
        }

        // Logic to filter notifications based on the selected date
        // For now, this is just a placeholder
        alert(Filtering notifications for: ${selectedDate});
    });

    // Search functionality
    document.getElementById('searchBar').addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        const cards = document.querySelectorAll('.notification-Card');

        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    });
</script>