@page
@model HomeownersMS.Pages.Account.RegisterResidentModel
@{
    Layout = "_ResidentLayout"; // Use the Admin layout
    ViewData["Title"] = "Register Resident";
    ViewData["HeaderTitle"] = "Register Resident";
    ViewData["Username"] = HttpContext?.User?.Identity?.Name ?? "Guest";
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}

<div class="container mt-4">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row g-3">
                        <!-- Username -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.Username" class="control-label">Username</label>
                            <input asp-for="UserInput.Username" class="form-control" />
                            <span asp-validation-for="UserInput.Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.Password" class="control-label">Password</label>
                            <input asp-for="UserInput.Password" type="password" class="form-control" />
                            <span asp-validation-for="UserInput.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="UserInput.ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="UserInput.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.LName" class="control-label">Last Name</label>
                            <input asp-for="UserInput.LName" class="form-control" />
                            <span asp-validation-for="UserInput.LName" class="text-danger"></span>
                        </div>

                        <!-- First Name -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.FName" class="control-label">First Name</label>
                            <input asp-for="UserInput.FName" class="form-control" />
                            <span asp-validation-for="UserInput.FName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.Email" class="control-label">Email</label>
                            <input asp-for="UserInput.Email" class="form-control" />
                            <span asp-validation-for="UserInput.Email" class="text-danger"></span>
                        </div>

                        <!-- Contact Number -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.ContactNo" class="control-label">Contact Number</label>
                            <input asp-for="UserInput.ContactNo" class="form-control" />
                            <span asp-validation-for="UserInput.ContactNo" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.Address" class="control-label">Address</label>
                            <input asp-for="UserInput.Address" class="form-control" />
                            <span asp-validation-for="UserInput.Address" class="text-danger"></span>
                        </div>

                        <!-- Move-In Date -->
                        <div class="col-md-6">
                            <label asp-for="UserInput.MoveInDate" class="control-label">Move-in Date</label>
                            <input asp-for="UserInput.MoveInDate" type="date" class="form-control" />
                            <span asp-validation-for="UserInput.MoveInDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Submit and Back Buttons -->
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-primary w-auto px-4">Register</button>
                        <a asp-page="/Admin/Users/Index" class="btn btn-secondary w-auto px-4">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}