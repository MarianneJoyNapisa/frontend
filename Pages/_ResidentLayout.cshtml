<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Blue Peak Living</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <!-- Add FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/GLobalstyle.css" />
</head>

<body>
    <!-- Header -->
    <div class="headerPage">
        <button class="sideNav_toggleBtn" id="sideNav_toggleBtn">
            <i class="bi bi-list fs-4 p-2"></i>
        </button>
        <h3 class="m-0">@ViewData["HeaderTitle"]</h3>
        <a asp-page="/Notification/Notifications" class="sideNav_toggleBtn @(ViewData["CurrentPage"]?.ToString() == "/Notification/Notifications" ? "active" : "")">
            <i class="bi bi-bell fs-4 p-2"></i>
        </a>
    </div>

    <!-- Side Navigation -->
    <div class="sideNavBar" id="sidenavBar">
        <!-- User Profile Section -->
        <div class="userProfile">
            <i class="profileImage bi bi-person-circle"></i>
            <div class="userInfo">
                <p class="userName">@ViewData["Username"]</p>
                <p class="userType">Resident</p>
            </div>
        </div>

        <!-- Navigation Links -->
        <div class="mainfunc_navLinks">
            <a asp-page="/Dashboard/Index" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Dashboard/Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>Dashboard</span>
            </a>
            <a asp-page="/Announcement/Announcement_Events" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Announcement/Announcement_Events" ? "active" : "")">
                <i class="bi bi-megaphone-fill"></i>
                <span>Announcements</span>
            </a>
            <a asp-page="/Reservation/Reservation" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Reservation/Reservation" ? "active" : "")">
                <i class="bi bi-calendar-fill"></i>
                <span>Reservation</span>
            </a>
            <a asp-page="/Billings_Payments/Payments" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Billings_Payments/Payments" ? "active" : "")">
                <i class="bi bi-credit-card-fill"></i>
                <span>Billing & Payments</span>
            </a>
            <a asp-page="/Service" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Service" ? "active" : "")">
                <i class="bi bi-tools"></i>
                <span>Service</span>
            </a>
            <a asp-page="/Community" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Community" ? "active" : "")">
                <i class="bi bi-chat-left-text-fill"></i>
                <span>Community</span>
            </a>
            <a asp-page="/Resources" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Resources" ? "active" : "")">
                <i class="bi bi-file-earmark-text-fill"></i>
                <span>Resources</span>
            </a>
            <a asp-page="/Security/Security" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Security/Security" ? "active" : "")">
                <i class="bi bi-shield-shaded"></i>
                <span>Security</span>
            </a>
        </div>

        <div class="genfunc_navLinks">
            <a asp-page="/Settings" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Settings" ? "active" : "")">
                <i class="bi bi-gear-fill"></i>
                <span>Settings</span>
            </a>
            <a asp-page="/Account/Logout" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Account/Logout" ? "active" : "")">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="overlay" id="overlay"></div>

    <!-- Main Content Area -->
    <div class="dashboard container-fluid mainSection">
        @RenderBody() <!-- This is where the content of Reservation.cshtml will be rendered -->
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/SideNavjs.js"></script>
    <script src="~/js/Calendar.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>