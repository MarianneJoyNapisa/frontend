@page
@model HomeownersMS.Pages_Admin_Residents.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "User Management";
    ViewData["Title"] = "Edit Resident";
}
<style>
    .card-header {
        background-color: var(--cta-color);
    }
</style>
<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Edit Resident</h5>
            <div>
                <a class="btn btn-sm btn-outline-light" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center mb-4">
                    <img src="@(string.IsNullOrEmpty(Model.Resident.ProfileImage) 
                        ? Url.Content("~/images/default-profile.png") 
                        : Url.Content($"~/uploads/{Model.Resident.ProfileImage}"))"
                        alt="Profile Image"
                        class="rounded-circle shadow mb-3"
                        style="width: 150px; height: 150px; object-fit: cover; background-color: #e9ecef;">
                </div>
                
                <div class="col-md-9">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Resident.UserId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Resident.FName" class="form-label"></label>
                                    <input asp-for="Resident.FName" class="form-control" />
                                    <span asp-validation-for="Resident.FName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Resident.LName" class="form-label"></label>
                                    <input asp-for="Resident.LName" class="form-control" />
                                    <span asp-validation-for="Resident.LName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Resident.Email" class="form-label"></label>
                            <input asp-for="Resident.Email" class="form-control" />
                            <span asp-validation-for="Resident.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Resident.ContactNo" class="form-label"></label>
                            <input asp-for="Resident.ContactNo" class="form-control" />
                            <span asp-validation-for="Resident.ContactNo" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Resident.Address" class="form-label"></label>
                            <input asp-for="Resident.Address" class="form-control" />
                            <span asp-validation-for="Resident.Address" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Resident.MoveInDate" class="form-label"></label>
                            <input asp-for="Resident.MoveInDate" type="date" class="form-control" />
                            <span asp-validation-for="Resident.MoveInDate" class="text-danger small"></span>
                        </div>

                        <!-- <div class="form-group mb-4">
                            <label asp-for="ProfileImage" class="form-label">Profile Image</label>
                            <input type="file" asp-for="ProfileImage" class="form-control" />
                            <span asp-validation-for="ProfileImage" class="text-danger small"></span>
                            <small class="form-text text-muted">Upload a new profile picture (JPEG, PNG, max 2MB)</small>
                        </div> -->

                        <div class="form-group d-flex justify-content-end gap-2">
                            <a asp-page="./Details" asp-route-id="@Model.Resident.UserId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}