@page "{id:int}"
@model HomeownersMS.Pages.Admin.Services.ServiceRequests.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Service Request";
    ViewData["HeaderTitle"] = "Services Management";
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}

<div class="container-fluid px-4 py-3">
    <div class="bg-white rounded-4 p-4 shadow-sm">
        <h2 class="fw-semibold mb-4">Edit Service Request</h2>
        
        <form method="post">
            <input type="hidden" asp-for="ServiceRequest.ServiceRequestId" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.ServiceId" class="form-label">Service</label>
                    <select asp-for="ServiceRequest.ServiceId" class="form-select" 
                            asp-items="@(ViewData["ServiceId"] as SelectList)" required>
                        <option value="">-- Select Service --</option>
                    </select>
                    <span asp-validation-for="ServiceRequest.ServiceId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.RequestedBy" class="form-label">Resident</label>
                    <select asp-for="ServiceRequest.RequestedBy" class="form-select" 
                            asp-items="@(ViewData["RequestedBy"] as SelectList)" required>
                        <option value="">-- Select Resident --</option>
                    </select>
                    <span asp-validation-for="ServiceRequest.RequestedBy" class="text-danger"></span>
                </div>
            </div>

            <!-- Rest of your form remains unchanged -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.FullName" class="form-label">Full Name (if not resident)</label>
                    <input asp-for="ServiceRequest.FullName" class="form-control" required/>
                    <span asp-validation-for="ServiceRequest.FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.Status" class="form-label">Status</label>
                    <select asp-for="ServiceRequest.Status" class="form-select" required>
                        <option value="pending">Pending</option>
                        <option value="inProgress">In Progress</option>
                        <option value="completed">Completed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="ServiceRequest.Status" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceRequest.IssueDescription" class="form-label">Issue Description</label>
                <textarea asp-for="ServiceRequest.IssueDescription" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="ServiceRequest.IssueDescription" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.RequestApprovedDateTime" class="form-label">Approval Date & Time</label>
                    <input asp-for="ServiceRequest.RequestApprovedDateTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ServiceRequest.RequestApprovedDateTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="ServiceRequest.RequestedDate" class="form-label">Requested Date</label>
                    <input asp-for="ServiceRequest.RequestedDate" type="date" class="form-control" />
                    <span asp-validation-for="ServiceRequest.RequestedDate" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ServiceRequest.RequestedTimeStart" class="form-label">Start Time</label>
                    <input asp-for="ServiceRequest.RequestedTimeStart" type="time" class="form-control" />
                    <span asp-validation-for="ServiceRequest.RequestedTimeStart" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ServiceRequest.RequestedTimeEnd" class="form-label">End Time</label>
                    <input asp-for="ServiceRequest.RequestedTimeEnd" type="time" class="form-control" />
                    <span asp-validation-for="ServiceRequest.RequestedTimeEnd" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.Email" class="form-label">Email</label>
                    <input asp-for="ServiceRequest.Email" class="form-control" required/>
                    <span asp-validation-for="ServiceRequest.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ServiceRequest.PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="ServiceRequest.PhoneNumber" class="form-control" required/>
                    <span asp-validation-for="ServiceRequest.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-page="./Index" class="btn btn-light me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}