@page
@model HomeownersMS.Pages.Admin.Services.EditModel
@using HomeownersMS.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.ServiceId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.Title" class="control-label">Title</label>
                <input type="text" asp-for="Service.Title" class="form-control" for-value="Service.Title"/>
                <span asp-validation-for="Service.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.Description" class="control-label">Description</label>
                <input type="text" asp-for="Service.Description" class="form-control" for-value="Service.Description"/>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Service.StaffId" class="control-label">StaffId</label>
                <input type="text" asp-for="Service.StaffId" class="form-control" for-value="Service.StaffId" readonly/>
                <span asp-validation-for="Service.StaffId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
