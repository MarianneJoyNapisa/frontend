@page
@model HomeownersMS.Pages_Admin_Services.DetailsModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Services Management";
    ViewData["Title"] = "Service Details";
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}
<style>
    .card-header {
        background-color: var(--cta-color);
    }
</style>
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">
                <i class="bi bi-info-circle me-2"></i>Service Details
            </h5>
            <a asp-page="./Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="mb-4">
                        <h4 class="fw-bold mb-3">@Model.Service.Title</h4>
                        
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge me-2" style="font-size: 1rem;">
                                @Model.Service.ServiceCategory
                            </span>
                            <span class="text-muted">
                                <i class="bi bi-calendar me-1"></i>@Model.Service.DayRange
                            </span>
                        </div>
                        
                        <div class="mb-4">
                            <h6 class="text-muted mb-2">Description</h6>
                            <p class="lead">@Model.Service.Description</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="text-muted mb-2">Availability</h6>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-clock-history me-2 text-primary"></i>
                                            <div>
                                                @Model.Service.AvailableTimeStart - @Model.Service.AvailableTimeEnd
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2 border-top pt-3">
                        <a asp-page="./Index" class="btn btn-secondary">
                           <i class="bi bi-x-circle me-1"></i> Cancel
                        </a>
                        <a asp-page="./Edit" asp-route-id="@Model.Service.ServiceId" class="btn btn-primary px-4">
                            <i class="bi bi-pencil me-1"></i> Edit Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>