@page
@model HomeownersMS.Pages_Admin_Services.DeleteModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Services Management";
    ViewData["Title"] = "Delete Service";
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">
                <i class="bi bi-building me-2"></i>Facility Details
            </h5>
            <div>
                <a asp-page="./Index" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <h6 class="alert-heading"><i class="bi bi-exclamation-octagon me-2"></i>Warning</h6>
                <p class="mb-0">You are about to permanently delete this service. This action cannot be undone.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.ServiceCategory)</dt>
                <dd class="col-sm-9">@Model.Service.ServiceCategory.ToString()</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.DayRange)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.DayRange)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.AvailableTimeStart)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.AvailableTimeStart)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Service.AvailableTimeEnd)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.AvailableTimeEnd)</dd>
            </dl>
            
            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Service.ServiceId" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>