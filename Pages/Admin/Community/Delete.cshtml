@page
@model HomeownersMS.Pages_Admin_Community.DeleteModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Community Management";
    ViewData["Title"] = "Delete Post";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3 border-danger">
        <div class="card-header bg-danger d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Delete Post Confirmation</h5>
            <div>
                <a class="btn btn-sm btn-outline-light" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <h6 class="alert-heading"><i class="bi bi-exclamation-octagon me-2"></i>Warning</h6>
                <p class="mb-0">You are about to permanently delete this community post. This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-3">Post Information</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Title</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CommunityPost.Title)</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CommunityPost.Type)</dd>

                                <dt class="col-sm-4">Created At</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CommunityPost.CreatedAt)</dd>

                                <dt class="col-sm-4">Updated At</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CommunityPost.UpdatedAt)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-3">Author Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">User ID</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CommunityPost.User.UserId)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="card-title text-muted mb-3">Content</h6>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.CommunityPost.Content)
                    </div>
                </div>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="CommunityPost.CommunityPostId" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>