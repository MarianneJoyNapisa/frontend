@page
@model HomeownersMS.Pages_Admin_Community.IndexModel

@{
    Layout = "_AdminLayout"; // Use the Admin layout
    ViewData["HeaderTitle"] = "Community Management";
    ViewData["Title"] = "Community";
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityPost[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CommunityPost) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CommunityPostId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CommunityPostId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CommunityPostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
