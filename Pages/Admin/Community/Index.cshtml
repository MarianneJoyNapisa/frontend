@page
@model HomeownersMS.Pages_Admin_Community.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Community Management";
    ViewData["Title"] = "Community Posts";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex gap-2">
            <a asp-page="../../Community/Community" class="btn btn-secondary">
                <i class="bi bi-chat-left-text me-2"></i>Community Posts
            </a>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Create New Post
            </a>
        </div>
    </div>
    <div class="row mb-4">
        <!-- Search Bar -->
        <div class="col-10">
            <div class="input-group">
                <input type="text" class="form-control border-end-0" placeholder="Search..." aria-label="Search">
                <button class="btn btn-input-icon" type="button"><i class="bi bi-search"></i></button>
            </div>
        </div>

        <!-- Filter and Sort Buttons -->
        <div class="col-2 d-flex align-items-center justify-content-end">
            <button class="btn btn-sm btn-primary me-2"><i class="bi bi-filter"></i></button>
            <button class="btn btn-sm btn-secondary"><i class="bi bi-sort-down"></i></button>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CommunityPost[0].Title)</th>
                            <th>@Html.DisplayNameFor(model => model.CommunityPost[0].Content)</th>
                            <th>@Html.DisplayNameFor(model => model.CommunityPost[0].CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.CommunityPost[0].UpdatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.CommunityPost[0].Type)</th>
                            <!-- <th>@Html.DisplayNameFor(model => model.CommunityPost[0].User)</th> -->
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CommunityPost)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;">
                                        @Html.DisplayFor(modelItem => item.Content)
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                @*<td>@Html.DisplayFor(modelItem => item.User.UserId)</td>*@
                                <td class="text-end align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.CommunityPostId" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.CommunityPostId" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.CommunityPostId" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .nav-link {
        border: none !important;
    }

    .table th {
        background-color: var(--cta-color) !important;
        color: white !important;
    }

    .table td, .table th {
        padding: 0.75rem 0.75rem;
    }

    .bi {
        font-size: 1.2rem;
        cursor: pointer;
    }

    .bi:hover {
        opacity: 0.85;
    }

    .table thead th:first-child {
        border-top-left-radius: 0.75rem;
    }

    .table thead th:last-child {
        border-top-right-radius: 0.75rem;
    }

    .table thead tr {
        overflow: hidden;
    }
</style>
