@page
@model HomeownersMS.Pages.Admin.Users.DeleteModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "User Management";
    ViewData["Title"] = "Delete User";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["CurrentPage"] = ViewContext.RouteData.Values["page"]?.ToString();
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-danger d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Delete User Confirmation</h5>
            <div>
                <a class="btn btn-sm btn-outline-light" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <h5 class="alert-heading">Warning!</h5>
                <p class="mb-0">Are you sure you want to delete this user account? This action cannot be undone.</p>
            </div>

            <div class="mb-4">
                <h6 class="text-muted mb-3">User Details</h6>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserList.Username)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.UserList.Username)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserList.Privilege)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.UserList.Privilege)</dd>
                </dl>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="UserList.UserId" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>