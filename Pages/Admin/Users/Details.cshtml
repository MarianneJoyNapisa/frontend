@page
@model HomeownersMS.Pages.Admin.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserList.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.PasswordHash)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserList.PasswordHash)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.Privilege)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserList.Privilege)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.Resident)
        </dt>
        <dd class="col-sm-10">
            @(Model.UserList.Resident != null ? Model.UserList.Resident.FName : "Not Assigned")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.Staff)
        </dt>
        <dd class="col-sm-10">
            @(Model.UserList.Staff != null ? Model.UserList.Staff.FName : "Not Assigned")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserList.Admin)
        </dt>
        <dd class="col-sm-10">
            @(Model.UserList.Admin != null ? Model.UserList.Admin.FName : "Not Assigned")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.UserList.UserId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
