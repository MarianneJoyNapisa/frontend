@page
@model HomeownersMS.Pages_Admin_Facilities.CreateModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Facilities Management";
    ViewData["Title"] = "Create New Facility";
}
<style>
    .card-header {
        background-color: var(--cta-color);
    }
</style>
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">
                <i class="bi bi-plus-circle me-2"></i>Create New Facility
            </h5>
            <a asp-page="./Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Facility.Name" class="form-label"></label>
                            <input asp-for="Facility.Name" class="form-control" placeholder="Enter facility name" />
                            <span asp-validation-for="Facility.Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Facility.PricePerHour" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">â‚±</span>
                                <input asp-for="Facility.PricePerHour" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Facility.PricePerHour" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Facility.Address" class="form-label"></label>
                            <input asp-for="Facility.Address" class="form-control" placeholder="Enter facility address" />
                            <span asp-validation-for="Facility.Address" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Facility.Description" class="form-label"></label>
                            <textarea asp-for="Facility.Description" class="form-control" rows="5" placeholder="Enter facility description"></textarea>
                            <span asp-validation-for="Facility.Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="FacilityImage" class="form-label">Facility Image</label>
                            <input type="file" asp-for="FacilityImage" class="form-control" />
                            <span asp-validation-for="FacilityImage" class="text-danger small"></span>
                            <small class="form-text text-muted">Upload a clear image of the facility (JPG/PNG, max 5MB)</small>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end gap-2 border-top pt-3">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Create Facility
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}