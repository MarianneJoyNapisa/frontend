@page
@model HomeownersMS.Pages_Admin_Facilities.DeleteModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Facilities Management";
    ViewData["Title"] = "Delete Facility";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Delete Facility
            </h5>
            <a asp-page="./Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <h6 class="alert-heading"><i class="bi bi-exclamation-octagon me-2"></i>Warning</h6>
                <p class="mb-0">You are about to permanently delete this facility. This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Facility.FacilityImage))
                    {
                        <img src="@Model.Facility.FacilityImage" 
                             class="img-fluid rounded shadow" 
                             style="max-height: 250px; object-fit: cover;" 
                             alt="@Model.Facility.Name" />
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                             style="height: 200px;">
                            <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                        </div>
                    }
                </div>
                
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Facility Name</dt>
                        <dd class="col-sm-8">@Model.Facility.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Facility.Description</dd>

                        <dt class="col-sm-4">Price Per Hour</dt>
                        <dd class="col-sm-8">â‚±@Model.Facility.PricePerHour</dd>
                    </dl>
                    
                    <form method="post" class="mt-4 border-top pt-3">
                        <input type="hidden" asp-for="Facility.FacilityId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>