@page 
@model HomeownersMS.Pages.Admin.Analytics.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Reports and Analytics";
    ViewData["Title"] = "Reports and Analytics";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Analytics Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">System-wide analytics and statistics</li>
    </ol>

    <!-- Facility Reservations Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-calendar-alt me-1"></i>
            Facility Reservations Analytics
        </div>
        <div class="card-body">
            <!-- Cards Row -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Most Reserved Facility</h6>
                                    <h4 class="mb-0">@Model.MostReservedFacility?.Name</h4>
                                </div>
                                <i class="fas fa-building fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.MostReservedFacilityCount reservations</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Top Resident</h6>
                                    <h4 class="mb-0">@Model.TopResidentReservations?.FName @Model.TopResidentReservations?.LName</h4>
                                </div>
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.TopResidentReservationsCount reservations</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Most Common Event</h6>
                                    <h4 class="mb-0">@Model.MostCommonEventType</h4>
                                </div>
                                <i class="fas fa-calendar-check fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.MostCommonEventTypeCount events</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-dark mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Total Reservations</h6>
                                    <h4 class="mb-0">@Model.TotalFacilityRequests</h4>
                                </div>
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.ApprovedFacilityRequests approved</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Facility Reservations Count
                        </div>
                        <div class="card-body">
                            <canvas id="facilityReservationsChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-1"></i>
                            Facility Reviews Distribution
                        </div>
                        <div class="card-body">
                            <canvas id="facilityReviewsChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Service Requests Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <i class="fas fa-tools me-1"></i>
            Service Requests Analytics
        </div>
        <div class="card-body">
            <!-- Cards Row -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Most Requested Service</h6>
                                    <h4 class="mb-0">@Model.MostRequestedService?.Title</h4>
                                </div>
                                <i class="fas fa-toolbox fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.MostRequestedServiceCount requests</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Top Resident</h6>
                                    <h4 class="mb-0">@Model.TopResidentServiceRequests?.FName @Model.TopResidentServiceRequests?.LName</h4>
                                </div>
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.TopResidentServiceRequestsCount requests</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Most Common Category</h6>
                                    <h4 class="mb-0">@Model.MostCommonServiceCategory</h4>
                                </div>
                                <i class="fas fa-list fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.MostCommonServiceCategoryCount services</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-dark mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-normal">Most Active Staff</h6>
                                    <h4 class="mb-0">@Model.MostActiveStaff?.FName @Model.MostActiveStaff?.LName</h4>
                                </div>
                                <i class="fas fa-user-cog fa-2x"></i>
                            </div>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <small>@Model.MostActiveStaffCount services</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Service Requests Count
                        </div>
                        <div class="card-body">
                            <canvas id="serviceRequestsChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-line me-1"></i>
                            Staff Performance Analytics
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="staffSelect" class="form-label">Select Staff</label>
                                <select class="form-select" id="staffSelect">
                                    @foreach (var staff in Model.StaffList)
                                    {
                                        <option value="@staff.UserId">@staff.FName @staff.LName (@staff.Job)</option>
                                    }
                                </select>
                            </div>
                            <canvas id="staffPerformanceChart" width="100%" height="30"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Facility Reservations Chart
        var facilityReservationsCtx = document.getElementById('facilityReservationsChart').getContext('2d');
        var facilityReservationsChart = new Chart(facilityReservationsCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.FacilityReservationData.Select(x => x.FacilityName))),
                datasets: [{
                    label: 'Number of Reservations',
                    data: @Html.Raw(Json.Serialize(Model.FacilityReservationData.Select(x => x.ReservationCount))),
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Facility Reservations Count'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Facility Reviews Chart
        var facilityReviewsCtx = document.getElementById('facilityReviewsChart').getContext('2d');
        var facilityReviewsChart = new Chart(facilityReviewsCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.FacilityReviewsData.Select(x => x.FacilityName))),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.FacilityReviewsData.Select(x => x.ReviewCount))),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                    },
                    title: {
                        display: true,
                        text: 'Facility Reviews Distribution'
                    }
                }
            }
        });

        // Service Requests Chart
        var serviceRequestsCtx = document.getElementById('serviceRequestsChart').getContext('2d');
        var serviceRequestsChart = new Chart(serviceRequestsCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ServiceRequestsData.Select(x => x.ServiceName))),
                datasets: [{
                    label: 'Number of Requests',
                    data: @Html.Raw(Json.Serialize(Model.ServiceRequestsData.Select(x => x.RequestCount))),
                    backgroundColor: 'rgba(75, 192, 192, 0.7)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Service Requests Count'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Staff Performance Chart
        var staffPerformanceCtx = document.getElementById('staffPerformanceChart').getContext('2d');
        var staffPerformanceChart;

        function updateStaffPerformanceChart(staffId) {
            // In a real application, you would fetch this data via AJAX
            // For this example, we'll use the first staff member's data
            var selectedStaff = @Html.Raw(Json.Serialize(Model.StaffPerformanceData.FirstOrDefault()));
            
            if (staffPerformanceChart) {
                staffPerformanceChart.destroy();
            }

            staffPerformanceChart = new Chart(staffPerformanceCtx, {
                type: 'bar',
                data: {
                    labels: ['Services Rendered', 'Most Common Service'],
                    datasets: [{
                        label: 'Performance Metrics',
                        data: [selectedStaff.totalServices, selectedStaff.mostCommonServiceCount],
                        backgroundColor: [
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ],
                        borderColor: [
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Staff Performance: ' + selectedStaff.staffName
                        },
                        tooltip: {
                            callbacks: {
                                afterLabel: function(context) {
                                    if (context.dataIndex === 0) {
                                        return 'Total services rendered';
                                    } else {
                                        return 'Most common service: ' + selectedStaff.mostCommonService;
                                    }
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        // Initialize with first staff
        updateStaffPerformanceChart(document.getElementById('staffSelect').value);

        // Handle staff selection change
        document.getElementById('staffSelect').addEventListener('change', function() {
            updateStaffPerformanceChart(this.value);
        });
    </script>
}