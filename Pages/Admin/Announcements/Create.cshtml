@page
@model HomeownersMS.Pages_Admin_Announcements.CreateModel
@using System.Security.Claims; 
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Hidden input for CreatedBy -->
            <input type="hidden" asp-for="Announcement.CreatedBy" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />
            <!-- Hidden input for CreatedAt -->
            <input type="hidden" asp-for="Announcement.CreatedAt" value="@DateTime.Now" />
            <div class="form-group">
                <label asp-for="Announcement.Title" class="control-label"></label>
                <input asp-for="Announcement.Title" class="form-control" />
                <span asp-validation-for="Announcement.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.Content" class="control-label"></label>
                <input asp-for="Announcement.Content" class="form-control" />
                <span asp-validation-for="Announcement.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.EventDate" class="control-label"></label>
                <input asp-for="Announcement.EventDate" class="form-control" />
                <span asp-validation-for="Announcement.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.BlocksAffected" class="control-label"></label>
                <input asp-for="Announcement.BlocksAffected" class="form-control" />
                <span asp-validation-for="Announcement.BlocksAffected" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.Office" class="control-label"></label>
                <input asp-for="Announcement.Office" class="form-control" />
                <span asp-validation-for="Announcement.Office" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.ContactNumber" class="control-label"></label>
                <input asp-for="Announcement.ContactNumber" class="form-control" />
                <span asp-validation-for="Announcement.ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}