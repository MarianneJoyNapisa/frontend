@page
@model HomeownersMS.Pages_Admin_Announcements.IndexModel
@using System.Security.Claims
@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "Announcements Management";
    ViewData["Title"] = "Announcements";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Announcements</h6>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fas fa-plus"></i> Create New
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Event Date</th>
                            <th>Blocks Affected</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Announcement)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.EventDate?.ToString("MM/dd/yyyy") @(item.EventTime.HasValue ? item.EventTime.Value.ToString("hh\\:mm") : "")</td>
                                <td>@item.BlocksAffected</td>
                                <td>@item.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#detailsModal" 
                                            data-id="@item.AnnouncementId" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" 
                                            data-id="@item.AnnouncementId" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                            data-id="@item.AnnouncementId" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Announcement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createForm" method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="NewAnnouncement.CreatedBy" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />
                    <input type="hidden" asp-for="NewAnnouncement.CreatedAt" value="@DateTime.Now" />
                    <div class="form-group">
                        <label asp-for="NewAnnouncement.Title" class="control-label"></label>
                        <input asp-for="NewAnnouncement.Title" class="form-control" />
                        <span asp-validation-for="NewAnnouncement.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnnouncement.Content" class="control-label"></label>
                        <textarea asp-for="NewAnnouncement.Content" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="NewAnnouncement.Content" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NewAnnouncement.EventDate" class="control-label"></label>
                                <input asp-for="NewAnnouncement.EventDate" type="date" class="form-control" />
                                <span asp-validation-for="NewAnnouncement.EventDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NewAnnouncement.EventTime" class="control-label"></label>
                                <input asp-for="NewAnnouncement.EventTime" type="time" class="form-control" />
                                <span asp-validation-for="NewAnnouncement.EventTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnnouncement.BlocksAffected" class="control-label"></label>
                        <input asp-for="NewAnnouncement.BlocksAffected" class="form-control" />
                        <span asp-validation-for="NewAnnouncement.BlocksAffected" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnnouncement.Office" class="control-label"></label>
                        <input asp-for="NewAnnouncement.Office" class="form-control" />
                        <span asp-validation-for="NewAnnouncement.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAnnouncement.ContactNumber" class="control-label"></label>
                        <input asp-for="NewAnnouncement.ContactNumber" class="form-control" />
                        <span asp-validation-for="NewAnnouncement.ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Announcement Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent">
                <!-- Content will be loaded via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Announcement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editForm" method="post" asp-page-handler="Edit">
                <div class="modal-body" id="editContent">
                    <!-- Content will be loaded via AJAX -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteForm" method="post" asp-page-handler="Delete">
                <div class="modal-body">
                    <p>Are you sure you want to delete this announcement?</p>
                    <input type="hidden" id="deleteAnnouncementId" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Details modal
            $('#detailsModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                $('#detailsContent').load('/Admin/Announcements/Announcements?handler=DetailsPartial&id=' + id);
            });
            // Edit modal
            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                $('#editContent').load('/Admin/Announcements/Announcements?handler=EditPartial&id=' + id);
            });
            // Delete modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                $('#deleteAnnouncementId').val(id);
            });
            // Handle form submissions via AJAX
            $('#createForm').on('submit', function(e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function() {
                    $('#createModal').modal('hide');
                    location.reload();
                }).fail(function(xhr) {
                    $('#createContent').html(xhr.responseText);
                });
            });
            $('#editForm').on('submit', function(e) {
                e.preventDefault();
                var formData = $(this).serializeArray();
                // Add the AnnouncementId to the form data
                formData.push({ name: "AnnouncementId", value: $('#editContent').find('[name="AnnouncementId"]').val() });
                
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $.param(formData),
                    success: function() {
                        $('#editModal').modal('hide');
                        location.reload();
                    },
                    error: function(xhr) {
                        $('#editContent').html(xhr.responseText);
                    }
                });
            });
            $('#deleteForm').on('submit', function(e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function() {
                    $('#deleteModal').modal('hide');
                    location.reload();
                });
            });
        });
    </script>
}