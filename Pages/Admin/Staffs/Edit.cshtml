@page
@model HomeownersMS.Pages_Admin_Staffs.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "User Management";
    ViewData["Title"] = "Edit Staff";
}
<style>
    .card-header {
        background-color: var(--cta-color);
    }
</style>
<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Edit Staff Member</h5>
            <div>
                <a class="btn btn-sm btn-outline-light" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center mb-4">
                    <img src="@(string.IsNullOrEmpty(Model.Staff.ProfileImage) 
                        ? Url.Content("~/images/default-profile.png") 
                        : Url.Content($"~/uploads/{Model.Staff.ProfileImage}"))"
                        alt="Profile Image"
                        class="rounded-circle shadow mb-3"
                        style="width: 150px; height: 150px; object-fit: cover; background-color: #e9ecef;">
                    <!-- <div class="d-grid">
                        <button type="button" class="btn btn-sm btn-secondary">
                            <i class="bi bi-camera"></i> Change Photo
                        </button>
                    </div> -->
                </div>
                
                <div class="col-md-9">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Staff.UserId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Staff.FName" class="form-label">First Name</label>
                                    <input asp-for="Staff.FName" class="form-control" />
                                    <span asp-validation-for="Staff.FName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Staff.LName" class="form-label">Last Name</label>
                                    <input asp-for="Staff.LName" class="form-control" />
                                    <span asp-validation-for="Staff.LName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Staff.Email" class="form-label">Email</label>
                            <input asp-for="Staff.Email" class="form-control" />
                            <span asp-validation-for="Staff.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Staff.ContactNo" class="form-label">Contact Number</label>
                            <input asp-for="Staff.ContactNo" class="form-control" />
                            <span asp-validation-for="Staff.ContactNo" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Staff.Job" class="form-label">Job Title</label>
                            <input asp-for="Staff.Job" class="form-control" />
                            <span asp-validation-for="Staff.Job" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Staff.HireDate" class="form-label">Hire Date</label>
                            <input asp-for="Staff.HireDate" type="date" class="form-control" />
                            <span asp-validation-for="Staff.HireDate" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-flex justify-content-end gap-2">
                            <a asp-page="./Details" asp-route-id="@Model.Staff.UserId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}