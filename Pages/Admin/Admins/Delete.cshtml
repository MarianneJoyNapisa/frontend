@page
@model HomeownersMS.Pages_Admin_Admins.DeleteModel

@{
    Layout = "_AdminLayout";
    ViewData["HeaderTitle"] = "User Management";
    ViewData["Title"] = "Delete Admin";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3 border-danger">
        <div class="card-header bg-danger d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Delete Admin Confirmation</h5>
            <div>
                <a class="btn btn-sm btn-outline-light" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <h6 class="alert-heading"><i class="bi bi-exclamation-octagon me-2"></i>Warning</h6>
                <p class="mb-0">You are about to permanently delete this administrator account. This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-3">Personal Information</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">First Name</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.FName)</dd>

                                <dt class="col-sm-4">Last Name</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.LName)</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.Email)</dd>

                                <dt class="col-sm-4">Contact No</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.ContactNo)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-3">Employment Details</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Job Title</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.Job)</dd>

                                <dt class="col-sm-4">Hire Date</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.HireDate)</dd>

                                <dt class="col-sm-4">User ID</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Admin.User.UserId)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Admin.UserId" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>