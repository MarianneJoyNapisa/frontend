@page
@model ELNET_HomeownersMS.Pages.Announcement.Announcement_EventsModel
@{
    Layout = "_ResidentLayout";
    ViewData["Title"] = "Announcements & Events";
}

<h2>Announcements & Events</h2>

@if (!Model.TodayAnnouncements.Any() && !Model.YesterdayAnnouncements.Any() && !Model.WeekAgoAnnouncements.Any())
{
    <p>No announcements available.</p>
}

@if (Model.TodayAnnouncements.Any())
{
    <h3>Today's Announcements</h3>
    <ul>
        @foreach (var announcement in Model.TodayAnnouncements)
        {
            <li><strong>@announcement.EventDate?.ToString("MMMM dd, yyyy")</strong> - @announcement.Title</li>
        }
    </ul>
}

@if (Model.YesterdayAnnouncements.Any())
{
    <h3>Yesterday's Announcements</h3>
    <ul>
        @foreach (var announcement in Model.YesterdayAnnouncements)
        {
            <li><strong>@announcement.EventDate?.ToString("MMMM dd, yyyy")</strong> - @announcement.Title</li>
        }
    </ul>
}

@if (Model.WeekAgoAnnouncements.Any())
{
    <h3>Past Week Announcements</h3>
    <ul>
        @foreach (var announcement in Model.WeekAgoAnnouncements)
        {
            <li><strong>@announcement.EventDate?.ToString("MMMM dd, yyyy")</strong> - @announcement.Title</li>
        }
    </ul>
}
