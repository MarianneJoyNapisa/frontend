@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Blue Peak Living</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/GLobalstyle.css" />
</head>

<body>
    <!-- Header -->
    <div class="headerPage">
        <button id="sideNav_toggleBtn">
            <i class="bi bi-list fs-4 p-2"></i>
        </button>
        <h3 class="m-0">@ViewData["HeaderTitle"]</h3>
        <i class="bi bi-bell fs-4 p-2"></i>
    </div>

    <!-- Side Navigation -->
    <div class="sideNavBar" id="sidenavBar">
        <!-- User Profile Section -->
        <div class="userProfile">
            <i class="profileImage bi bi-person-circle"></i>
            <div class="userInfo">
                <p class="userName">@ViewData["Username"]</p>
                <p class="userType">Admin</p>
            </div>
        </div>

        <!-- Navigation Links -->
        <div class="mainfunc_navLinks">
            <a asp-page="/Dashboard/Index" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Dashboard/Index" ? "active" : "")">
                <i class="bi bi-house-door-fill"></i>
                <span>Dashboard</span>
            </a>
            <a asp-page="/Admin/Users/Index" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Admin/Users/Index" ? "active" : "")">
                <i class="bi bi-people-fill"></i>
                <span>User Management</span>
            </a>
            <a asp-page="/Admin/Facilities/Index" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Admin/Facilities/Index" ? "active" : "")">
                <i class="bi bi-calendar-fill"></i>
                <span>Facilities Management</span>
            </a>
            <a asp-page="/Admin/Announcements/Index" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Admin/Announcements/Index" ? "active" : "")">
                <i class="bi bi-megaphone-fill"></i>
                <span>Announcements & Events</span>
            </a>
            <a asp-page="#" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Admin/Staffs/Index" ? "active" : "")">
                <i class="bi bi-credit-card-fill"></i>
                <span>Billings & Payments</span>
            </a>
                <a asp-page="#" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Resources" ? "active" : "")">
                <i class="bi bi-bar-chart-fill"></i>
                <span>Report & Analytics</span>
            </a>
            <a asp-page="#" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Community" ? "active" : "")">
                <i class="bi bi-chat-left-text-fill"></i>
                <span>Community</span>
            </a>
            <a asp-page="#" class="navItem @(ViewData["CurrentPage"]?.ToString() == "/Resources" ? "active" : "")">
                <i class="bi bi-file-earmark-text-fill"></i>
                <span>Resources </span>
            </a>
        </div>

        <div class="genfunc_navLinks">
            <a asp-page="#" class="navItem @(ViewData["CurrentPage"]?.ToString()?.StartsWith("/Settings") == true ? "active" : "")">
                <i class="bi bi-gear-fill"></i>
                <span>Settings</span>
            </a>
            <a asp-page="/Account/Logout" class="navItem @(ViewData["CurrentPage"]?.ToString()?.StartsWith("/Account/Logout") == true ? "active" : "")">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="overlay" id="overlay"></div>
    

    <!-- Main Content Area -->
    <div class="dashboard container-fluid mainSection">
        @RenderBody() <!-- This is where the content of Reservation.cshtml will be rendered -->
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/SideNavjs.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>