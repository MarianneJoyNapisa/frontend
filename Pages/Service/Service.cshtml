@page
@model HomeownersMS.Pages.Service.ServiceModel
@{
    Layout = "_ResidentLayout"; // Use your layout file
    ViewData["HeaderTitle"] = "Services";
    ViewData["Title"] = "Services";
    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["Username"] = username;
    ViewData["CurrentPage"] = currentPage;
}

<style>
    .service-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }
    .service-card {
        flex: 1 1 calc(50% - 20px); /* 2 per row */
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<h2 class="mb-4">Our Services</h2>

<div class="service-container">
    <div class="service-card">
        <h4>Plumbing Repairs</h4>
        <p>Fix leaks, replace pipes, and general plumbing maintenance.</p>
        <p><strong>Price:</strong> $50 - $200</p>
    </div>

    <div class="service-card">
        <h4>Electrical Services</h4>
        <p>Wiring repairs, circuit troubleshooting, and installations.</p>
        <p><strong>Price:</strong> $75 - $300</p>
    </div>

    <div class="service-card">
        <h4>Housekeeping</h4>
        <p>Cleaning and organizing services for your home.</p>
        <p><strong>Price:</strong> $40 per session</p>
    </div>

    <div class="service-card">
        <h4>Landscaping</h4>
        <p>Lawn mowing, gardening, and outdoor maintenance.</p>
        <p><strong>Price:</strong> $100 - $500</p>
    </div>
</div>
