@page
@model HomeownersMS.Pages.Reservation.MyReservationsModel
@using HomeownersMS.Models

@{
    ViewData["CurrentPage"] = "/Reservation/MyReservations";
    ViewData["Title"] = "My Reservations";
    Layout = "_ResidentLayout";
}

<div class="container">
    <h2>My Reservations</h2>
    
    @if (Model.Reservations.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Event Title</th>
                        <th>Event Type</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr>
                            <td>@reservation.Event?.Title</td>
                            <td>@reservation.Event?.EventType</td>
                            <td>@reservation.Event?.EventDate?.ToShortDateString()</td>
                            <td>@reservation.Event?.EventTimeStart?.ToString("hh\\:mm") - @reservation.Event?.EventTimeEnd?.ToString("hh\\:mm")</td>
                            <td>
                                <span class="badge 
                                    @(reservation.FacilityRequest?.Status == RequestStatus.Approved ? "bg-success" :
                                    reservation.FacilityRequest?.Status == RequestStatus.Declined ? "bg-danger" : "bg-warning")">
                                    @reservation.FacilityRequest?.Status
                                </span>
                            </td>
                            <td>
                                <a asp-page="./ViewReservation" asp-route-id="@reservation.FacilityRequest?.FacilityRequestId" class="btn btn-sm btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You have no reservations yet.
        </div>
    }
</div>