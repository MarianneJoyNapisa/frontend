@page
@model HomeownersMS.Pages.Reservation.ReservationModel
@{
    Layout = "_ResidentLayout";
    ViewData["HeaderTitle"] = "Reservation";
    ViewData["Title"] = "Reservation";
    var username = HttpContext?.User?.Identity?.Name ?? "Guest";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    ViewData["Username"] = username;
    ViewData["CurrentPage"] = currentPage;
}

<style>
    .facility-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .facility-img {
        height: 100%;
        object-fit: cover;
        max-height: 150px;
    }

    .badge {
        padding: 0.5em 0.8em;
        border-radius: 4px;
    }

    .table th {
        font-weight: 500;
        color: #555;
    }

    .table td {
        padding: 12px 8px;
    }
</style>

<div class="row">
    @* Breadcrumb navigatin *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Facilities</li>
        </ol>
    </nav>
    
    @* <!-- Reservation Content --> *@
    <div class="col-12">
        <div class="facilities mb-4">
            <h2>Facilities</h2>
            <div class="container-fluid p-0">
                <div class="row g-3">
                    @if (Model.Facilities.Any())
                    {
                        @foreach (var facility in Model.Facilities)
                        {
                            @* <!-- Facility Cards --> *@
                            <div class="col-12">
                                <a asp-page="/Reservation/Reserve" asp-route-facilityId="@facility.FacilityId">
                                    <div class="card facility-card">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                <img src="@Url.Content($"~/{@facility.FacilityImage}")" 
                                                     class="img-fluid facility-img rounded-start" 
                                                     alt="@facility.Name">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title mb-1">â‚± @facility.PricePerHour/hr</h5>
                                                    <h6 class="card-subtitle mb-1">@facility.Name</h6>
                                                    <p class="card-text"><small class="text-muted">@facility.Address</small></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <p class="text-center">No facilities available.</p>
                            <p class="text-center">Debug: Facilities count is @Model.Facilities.Count</p>
                        </div>
                    }
                </div>
            </div>
        </div>

