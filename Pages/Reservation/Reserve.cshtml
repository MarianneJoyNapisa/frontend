@page
@using HomeownersMS.Models
@model HomeownersMS.Pages.Reservation.ReserveModel

@{
    Layout = "_ResidentLayout"; 
    ViewData["HeaderTitle"] = "Reserve Facility";
    ViewData["Title"] = "Reserve Facility";
}

<div class="container">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>Reserve @Model.Facility.Name</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Facility.FacilityImage" alt="@Model.Facility.Name" class="img-fluid rounded">
            <h4 class="mt-3">@Model.Facility.Name</h4>
            <p>Price: â‚±@Model.Facility.PricePerHour per hour</p>
        </div>
        
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="FacilityRequest.FacilityId" />
                <input type="hidden" asp-for="FacilityRequest.ResidentId" />
                
                <!-- Personal Info Section -->
                <div class="card mb-3">
                    <div class="card-header">Personal Information</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FacilityRequest.FullName" class="control-label"></label>
                            <input asp-for="FacilityRequest.FullName" class="form-control" />
                            <span asp-validation-for="FacilityRequest.FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="FacilityRequest.EmailAddress" class="control-label"></label>
                            <input asp-for="FacilityRequest.EmailAddress" class="form-control" />
                            <span asp-validation-for="FacilityRequest.EmailAddress" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="FacilityRequest.PhoneNumber" class="control-label"></label>
                            <input asp-for="FacilityRequest.PhoneNumber" class="form-control" />
                            <span asp-validation-for="FacilityRequest.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Event Details Section -->
                <div class="card mb-3">
                    <div class="card-header">Event Details</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Event.Title" class="control-label">Event Title</label>
                            <input asp-for="Event.Title" class="form-control" />
                            <span asp-validation-for="Event.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Event.EventType" class="control-label">Event Type</label>
                            <select asp-for="Event.EventType" class="form-control" 
                                    asp-items="Html.GetEnumSelectList<EventType>()">
                                <option value="">-- Select Event Type --</option>
                            </select>
                            <span asp-validation-for="Event.EventType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Event.EventDate" class="control-label">Event Date</label>
                            <input type="date" asp-for="Event.EventDate" class="form-control" />
                            <span asp-validation-for="Event.EventDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Event.EventTimeStart" class="control-label">Start Time</label>
                                    <input type="time" asp-for="Event.EventTimeStart" class="form-control" />
                                    <span asp-validation-for="Event.EventTimeStart" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Event.EventTimeEnd" class="control-label">End Time</label>
                                    <input type="time" asp-for="Event.EventTimeEnd" class="form-control" />
                                    <span asp-validation-for="Event.EventTimeEnd" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Event.GuestCapacity" class="control-label">Number of Guests</label>
                            <input asp-for="Event.GuestCapacity" class="form-control" />
                            <span asp-validation-for="Event.GuestCapacity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Submit Request" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
