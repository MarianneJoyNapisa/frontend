@page
@model HomeownersMS.Pages.Reservation.ReserveModel

@{
    ViewData["Title"] = "Reserve Facility";
}

<div class="container">
    <h2>Reserve @Model.Facility.Name</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Facility.FacilityImage" alt="@Model.Facility.Name" class="img-fluid rounded">
            <h4 class="mt-3">@Model.Facility.Name</h4>
            <p>Price: â‚±@Model.Facility.PricePerHour per hour</p>
        </div>
        
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="FacilityRequest.FacilityId" />
                <input type="hidden" asp-for="FacilityRequest.ResidentId" />
                
                <div class="form-group">
                    <label asp-for="FacilityRequest.FullName" class="control-label"></label>
                    <input asp-for="FacilityRequest.FullName" class="form-control" />
                    <span asp-validation-for="FacilityRequest.FullName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FacilityRequest.EmailAddress" class="control-label"></label>
                    <input asp-for="FacilityRequest.EmailAddress" class="form-control" />
                    <span asp-validation-for="FacilityRequest.EmailAddress" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FacilityRequest.PhoneNumber" class="control-label"></label>
                    <input asp-for="FacilityRequest.PhoneNumber" class="form-control" />
                    <span asp-validation-for="FacilityRequest.PhoneNumber" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FacilityRequest.ReservationDate" class="control-label"></label>
                    <input asp-for="FacilityRequest.ReservationDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="FacilityRequest.ReservationDate" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col">
                        <label asp-for="FacilityRequest.StartTime" class="control-label"></label>
                        <input asp-for="FacilityRequest.StartTime" class="form-control" type="time" />
                        <span asp-validation-for="FacilityRequest.StartTime" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="FacilityRequest.EndTime" class="control-label"></label>
                        <input asp-for="FacilityRequest.EndTime" class="form-control" type="time" />
                        <span asp-validation-for="FacilityRequest.EndTime" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group mt-3">
                    <input type="submit" value="Submit Request" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
